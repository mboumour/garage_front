{
    "name": "Appointment",
    "type": "object",
    "properties": {
      "client_name": {
        "type": "string",
        "description": "Nom complet du client"
      },
      "email": {
        "type": "string",
        "format": "email",
        "description": "Email du client"
      },
      "phone": {
        "type": "string",
        "description": "Num\u00e9ro de t\u00e9l\u00e9phone"
      },
      "service": {
        "type": "string",
        "description": "Service demand\u00e9"
      },
      "vehicle_info": {
        "type": "string",
        "description": "Informations sur le v\u00e9hicule (marque, mod\u00e8le)"
      },
      "preferred_date": {
        "type": "string",
        "format": "date",
        "description": "Date souhait\u00e9e"
      },
      "preferred_time": {
        "type": "string",
        "description": "Heure souhait\u00e9e"
      },
      "message": {
        "type": "string",
        "description": "Message ou d\u00e9tails suppl\u00e9mentaires"
      },
      "status": {
        "type": "string",
        "enum": [
          "pending",
          "confirmed",
          "completed",
          "cancelled"
        ],
        "default": "pending",
        "description": "Statut du rendez-vous"
      }
    },
    "required": [
      "client_name",
      "email",
      "phone",
      "service",
      "preferred_date"
    ]
  }